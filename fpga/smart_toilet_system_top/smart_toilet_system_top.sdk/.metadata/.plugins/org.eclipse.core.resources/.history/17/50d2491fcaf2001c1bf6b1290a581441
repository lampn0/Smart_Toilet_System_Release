/* FreeRTOS includes. */
#include "FreeRTOS.h"
#include "task.h"
#include "queue.h"
#include "timers.h"
/* Xilinx includes. */
#include "xil_printf.h"
#include "xparameters.h"
#include "header/oled.h"

#include <stdio.h>
#include "header/smart_toilet_system_regs.h"

#define TIMER_ID	1
#define DELAY_10_SECONDS	10000UL
#define DELAY_1_SECOND		1000UL
/*-----------------------------------------------------------*/

/* The Tx and Rx tasks as described at the top of this file. */
static void prvTxTask( void *pvParameters );
static void prvRxTask( void *pvParameters );
static void vTimerCallback( TimerHandle_t pxTimer );
/*-----------------------------------------------------------*/
char *myString;
char *line0 = "STATUS: WARM UP";
char *line1 = "TEMP: 1 oC";
char *line2 = "EMBEDDED SYSTEM";
char *line3 = "thinv0";

static TaskHandle_t xTxTask;
static TaskHandle_t xRxTask;
oledControl myOled;


int main( void )
{
	initOled(&myOled,XPAR_OLED_CONTROLLER_0_BASEADDR);
	xTaskCreate( 	prvTxTask, 					/* The function that implements the task. */
					( const char * ) "Tx", 		/* Text name for the task, provided to assist debugging only. */
					configMINIMAL_STACK_SIZE, 	/* The stack allocated to the task. */
					NULL, 						/* The task parameter is not used, so set to NULL. */
					tskIDLE_PRIORITY,			/* The task runs at the idle priority. */
					&xTxTask );

	xTaskCreate( prvRxTask,
				 ( const char * ) "GB",
				 configMINIMAL_STACK_SIZE,
				 NULL,
				 tskIDLE_PRIORITY + 1,
				 &xRxTask );

	vTaskStartScheduler();
	while(1){

	}
}

/*-----------------------------------------------------------*/
u32 temp;
static void prvTxTask( void *pvParameters )
{
	const TickType_t x1second = pdMS_TO_TICKS( 300UL );
	for( ;; )
	{
		read_reg_data();
		temp = data_temp_get();
		line1[6] = temp + '0';

		read_reg_stt();
		if(stt_ready_get()) {
			strcpy(line0,"READY");
		} else if (stt_using_get()) {
			strcpy(line0,"USING");
		} else if(stt_spraying_get()){
			strcpy(line0,"SPRAYING");
		} else if (stt_drying_get()){
			strcpy(line0,"DRYING");
		} else if (stt_discharge_get()){
			strcpy(line0,"DISCHARGING");
		}

		sprintf(myString, "%-16s%-16s%-16s%-16s", line0,line1,line2,line3);
		vTaskDelay( x1second );
		clearOled(&myOled);
		printOled(&myOled,myString);
		read_reg_data();
		temp = data_temp_get();
		if(temp == 0 || temp == 1){
			ctrl_warm_en_set(1);
		} else {
			ctrl_warm_en_set(0);
		}
//		ctrl_warm_en_set(1);
		write_reg_ctrl();
	}
}

/*-----------------------------------------------------------*/
static void prvRxTask( void *pvParameters )
{

	const TickType_t x1second = pdMS_TO_TICKS( 500UL );
	while(1){
		vTaskDelay( x1second );
//		temp = data_temp_get();
		if(temp == 0 || temp == 1){
			ctrl_warm_en_set(1);
		} else {
			ctrl_warm_en_set(0);
		}
		write_reg_ctrl();
	}
}

/*-----------------------------------------------------------*/
static void vTimerCallback( TimerHandle_t pxTimer )
{
	long lTimerId;
	configASSERT( pxTimer );

	lTimerId = ( long ) pvTimerGetTimerID( pxTimer );

	if (lTimerId != TIMER_ID) {
		xil_printf("FreeRTOS Hello World Example FAILED");
	}

	vTaskDelete( xRxTask );
	vTaskDelete( xTxTask );
}

